<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ('./partials/head.ejs') %>
</head>
<body>
    <%- include ('./partials/nav.ejs') %>
    <div class="container-fluid show-container">
        <div class="padding"></div>
        <div class="col text-center">
            <img class="show-img" src="<%=print.imgSrc%>"/>
            <h3 class="normal-font"><%=print.name%></h3>
            <h4 class="noraml-font">$<%=print.price%></h4>
            <button type="button" class="btn btn-outline-secondary" onclick="location.href = '/prints/'">back</button>
            <button type="button" class="btn btn-outline-secondary" onclick="location.href='/cart/add/<%=print.id%>'">add to cart</button>
        </div>
    </div>
    <hr>
    <div id="admin" class="text-center">
        <a id="edit-print" class="inline-block" href="/prints/<%=print.id%>/edit">edit print</a>
        <form action="/prints/<%=print.id; %>?_method=DELETE" method="POST" style="display: inline-block">
            <input type="submit" value="delete print" style="border:none; background:none; color:lightgray"/>
        </form>
    <div>
    <%- include ('./partials/footer.ejs') %>
    <%- include ('./partials/scripts.ejs') %>
</body>
</html>