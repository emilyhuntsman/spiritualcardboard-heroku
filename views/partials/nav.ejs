<nav>
    <ul class="nav nav-tabs nav-partial">
        <li class="nav-item"><a class="nav-link" href="/">HOME</a></li>
        <li class="nav-item"><a class="nav-link" href="/prints/">PRINTS</a></li>
        <li class="nav-item"><a class="nav-link" href="/widgets/">WIDGETS</a></li>
        <li class="nav-item"><a class="nav-link" href="https://www.instagram.com/spiritualcardboard/">INSTAGRAM</a></li>
        <li class="dropdown ml-auto">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="cartButton" data-toggle="dropdown"><img src="/pics/cart.svg" id="cart-icon">cart</button>
            <ul class="dropdown-menu cart-dropdown">
                <% for (let i = 0; i < cart.length; i++) { %>
                    <li class="item">
                        <div class="cart-item">
                            <div>
                                <%=cart[i].name%>
                            </div>
                            <div class="item-info left">
                                $<%=cart[i].price%>
                            </div>
                        </div>
                        <div class='inline-block nav-div'>
                            <img class="nav-img" src="<%=cart[i].imgSrc%>"> 
                            <button class="btn btn-light" onclick="location.href='/prints/remove/<%=cart[i].id%>/<%=route%>'">x</button>
                        </div>
                    </li>
                <% } %>
                <hr>
                <div class="left" style="display: inline-block; padding-left: 10px; font-weight: bold">
                    total: $<%=(cart.length)*15%>
                </div>
                <div class="right">
                    <button class="btn btn-secondary dropdown-item" type="button" id="cartCheckout" style="transform: translate(0px,-3px);" onclick="location.href='/cart/'">checkout</button>
                </div>
            </ul>
        </li>
    </ul>
</nav>